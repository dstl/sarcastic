SRC = GOSS.c readKdTree.c BuildRopesAndBoxes.c banner.c TxPowerPerRay.c getUserInput.c ecef2SceneCoords.c threadCore.c threadBeamForm.c

INCLUDE = GOSS.h readKdTree.h BuildRopesAndBoxes.h TxPowerPerRay.h ecef2SceneCoords.h

LIBS = -lSIlib -lreadline -lexpat -lfftw3f -lfftw3f_threads

CC	:= _CC_
CFLAGS = -O2 -Wall -c -g -D_REENTRANT -Wmissing-prototypes -I/usr/local/dstl/include/SIlib
LFLAGS = -L/usr/local/dstl/lib

OBJ = $(patsubst %.c, %.o, $(SRC))

VERSION := $(shell `pwd`/GenGitVersion.sh)
CFLAGS+=-DVERSION="\"$(VERSION)\""

uname :=  $(shell uname)

ifeq ($(uname),SunOS)
	CFLAGS += -m64 -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -DHAVE_READLINE=1
endif

ifeq ($(uname),Linux)
	CFLAGS += -m64 -std=gnu99 -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -DHAVE_READLINE=1 -I/usr/local/cuda/include -I/opt/AMDAPP/include
    FFLAGS += -L/usr/lib64 -lOpenCL
endif

ifeq ($(uname),Darwin)
	CFLAGS += -arch x86_64 -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -DHAVE_READLINE=1
    LFLAGS += -framework OpenCL
endif

all:	goss

goss:	$(OBJ) $(INCLUDE)
		@echo Making GOSS...
		$(CC) -o goss $(OBJ) $(LFLAGS) $(LIBS)

install:	
		mkdir -p _INSTALLDIR_/bin
		cp goss _INSTALLDIR_/bin/goss-$(VERSION).a
		rm -f _INSTALLDIR_/bin/goss
		ln -s _INSTALLDIR_/bin/goss-$(VERSION).a _INSTALLDIR_/bin/goss

clean:	
	rm -f *.o

realclean:
	rm -f *.o goss


