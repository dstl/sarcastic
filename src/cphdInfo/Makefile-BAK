SRC     = main.cpp

INCLUDE = readCPHD_Version.h

UNAME      := $(shell uname)
VERSION    := $(shell `pwd`/GenGitVersion.sh)
INSTALLDIR := /usr/local/dstl
CURRDIR    := $(shell pwd)
LIBS       := `$(INSTALLDIR)/bin/SIlib2-config --libs` -L/usr/local/lib
CFLAGS     := `$(INSTALLDIR)/bin/SIlib2-config --cflags` -I/usr/local/include


OBJ = $(patsubst %.cpp, %.o, $(SRC))

CC = clang

# for debugging just type make print-VARNAME where VARNAME is the name
# of the variable you want to print out
#
print-%  : ; @echo $* = $($*)

all: cphdInfo

cphdInfo: $(OBJ) $(INCLUDE)
	$(CC) $(OBJ) $(LIBS) -o cphdInfo-$(VERSION)
install:	cphdInfo
	mkdir -p $(INSTALLDIR)/bin
	cp cphdInfo-$(VERSION) $(INSTALLDIR)/bin/cphdInfo-$(VERSION)
	rm -f $(INSTALLDIR)/bin/cphdInfo
	ln -s $(INSTALLDIR)/bin/cphdInfo-$(VERSION) $(INSTALLDIR)/bin/cphdInfo

%.o:	%.cpp $(INCLUDE)
	$(CC) -c $< $(CFLAGS) -o $@


clean: 
	rm -fr *.o
	rm -f cphdInfo-*

